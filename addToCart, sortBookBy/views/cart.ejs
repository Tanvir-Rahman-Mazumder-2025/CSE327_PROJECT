<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">
  <%- include('navbar') %>

  <section class="max-w-6xl mx-auto mt-10 bg-white p-6 shadow rounded">
    <% if (!user) { %>
  <div class="flex items-center justify-between bg-red-100 p-4 rounded border border-red-300 mb-4">
    <p class="text-red-700 text-lg font-semibold">Please log in to access your cart.</p>
    <a href="/login" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded shadow">
      Login
    </a>
  </div>

    <% } else if (!cart || cart.items.length === 0) { %>
    <h1 class="text-2xl font-bold mb-4">Hello, <%= user.username %> â€” Your Cart</h1>

   <div class="flex items-center justify-between bg-gray-50 p-4 rounded border">
  <p class="text-gray-600 text-lg">Your cart is empty.</p>
  <a href="/api/book/get_books" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded shadow">
    Browse Books
  </a>
</div>

    <% } else { %>
      <div class="space-y-4">
        <% cart.items.forEach(item => { %>
          <div class="flex items-center justify-between border-b pb-4">
            <div class="flex items-center space-x-4">
              <img src="<%= item.book_id.image_url %>" alt="<%= item.book_id.title %>" class="w-24 h-32 object-cover rounded" />
              <div>
                <h2 class="text-lg font-semibold"><%= item.book_id.title %></h2>
                <p class="text-sm text-gray-500">by <%= item.book_id.author %></p>
                <p class="text-sm">Tk <%= item.book_id.price %> x <%= item.quantity %> = <span class="font-semibold">Tk <%= item.totalprice %></span></p>
              </div>
            </div>

            <form action="/api/cart/remove_from_cart" method="POST">
              <input type="hidden" name="book_id" value="<%= item.book_id._id %>" />
              <button class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded">Remove</button>
            </form>
          </div>
        <% }); %>
      </div>

    <% } %>

  </section>
</body>
</html>
